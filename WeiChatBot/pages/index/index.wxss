/* pages/index/index.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 用户信息区域 */
.user-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  text-align: center;
}

.user-info-btn {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
}

/* 卡片通用样式 */
.lunar-card,
.birthday-card,
.upcoming-card {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.card-date,
.birthday-count,
.upcoming-count {
  font-size: 28rpx;
  color: #666;
  background: #f8f9fa;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

/* 黄历信息 */
.lunar-info {
  padding: 30rpx;
}

.lunar-date,
.zodiac-info {
  margin-bottom: 20rpx;
}

.label {
  color: #666;
  font-size: 28rpx;
  margin-right: 10rpx;
}

.value {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}

.activities {
  margin: 30rpx 0;
}

.suitable,
.unsuitable {
  margin-bottom: 15rpx;
}

.suitable .label {
  color: #52c41a;
}

.unsuitable .label {
  color: #ff4d4f;
}

.description {
  background: #f8f9fa;
  padding: 20rpx;
  border-radius: 10rpx;
  margin: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.festivals {
  margin-top: 20rpx;
}

.festivals .label {
  color: #1890ff;
}

.card-actions {
  display: flex;
  padding: 20rpx 30rpx;
  border-top: 2rpx solid #f0f0f0;
}

.action-btn {
  flex: 1;
  margin: 0 10rpx;
  background: #1890ff;
  color: white;
  border: none;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

.action-btn:first-child {
  margin-left: 0;
}

.action-btn:last-child {
  margin-right: 0;
}

/* 生日列表 */
.birthday-list {
  padding: 0 30rpx;
}

.birthday-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
}

.birthday-item:last-child {
  border-bottom: none;
}

.birthday-info {
  flex: 1;
}

.birthday-name {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.birthday-date {
  font-size: 26rpx;
  color: #666;
}

.wish-btn {
  background: #52c41a;
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 15rpx 30rpx;
  font-size: 26rpx;
  margin-left: 20rpx;
}

/* 即将到来的生日 */
.upcoming-list {
  padding: 0 30rpx;
}

.upcoming-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
}

.upcoming-item:last-child {
  border-bottom: none;
}

.upcoming-date {
  flex: 1;
}

.upcoming-date .date {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 5rpx;
}

.upcoming-date .lunar-date {
  font-size: 24rpx;
  color: #666;
}

.upcoming-birthdays {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.upcoming-birthdays .birthday-name {
  background: #e6f7ff;
  color: #1890ff;
  padding: 8rpx 16rpx;
  border-radius: 15rpx;
  font-size: 24rpx;
}

/* 快速操作 */
.quick-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.quick-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: white;
  border: 2rpx solid #e8e8e8;
  border-radius: 15rpx;
  padding: 30rpx 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.quick-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
}

.btn-icon {
  font-size: 48rpx;
  margin-bottom: 15rpx;
}

.btn-text {
  font-size: 26rpx;
  color: inherit;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 100rpx 0;
  color: #666;
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 30rpx;
}

.empty-text {
  display: block;
  color: #666;
  font-size: 32rpx;
  margin-bottom: 40rpx;
}

.empty-btn {
  background: #1890ff;
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
} 